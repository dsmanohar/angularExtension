{
  "manifest_version": 3,
  "name": "ADHE",
  "version": "1.0",

  "description": "adhe chesthadhi",

  "icons": {
    "48": "icons/border-48.png"
  },

  "action": {
    "default_title": "Click to show an alert"
  },

  "permissions": ["activeTab", "scripting"],

  "web_accessible_resources": [
    {
      "resources": ["index.html", "*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
